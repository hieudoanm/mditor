{
	"name": "@mditor/app",
	"version": "0.1.0",
	"private": true,
	"description": "Markdown",
	"keywords": [
		"markdown"
	],
	"homepage": "https://hieudoanm.github.io/mditor",
	"bugs": {
		"url": "https://github.com/hieudoanm/mditor/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/hieudoanm/mditor.git"
	},
	"license": "GPL-3.0",
	"author": "hieudoanm <hieumdoan@gmail.com> (https://hieudoanm.github.io)",
	"packageManager": "pnpm@10.27.0",
	"scripts": {
		"predev": "kill-port 3000",
		"dev": "next dev --turbopack",
		"prebuild": "rimraf .next ../../docs",
		"build": "next build --turbopack",
		"postbuild": "touch ../../docs/.nojekyll",
		"build:tauri": "tauri build",
		"build:android": "rm -rf mobile/android && cap add android && cap sync android",
		"build:ios": "rm -rf mobile/ios && cap add ios && cap sync ios",
		"build:mobile": "pnpm run build:android && pnpm run build:ios",
		"prestart": "kill-port 3000",
		"start": "next start",
		"test": "jest",
		"format": "prettier --cache --write .",
		"lint": "eslint"
	},
	"dependencies": {
		"@capacitor/android": "8.0.1",
		"@capacitor/core": "8.0.1",
		"@capacitor/ios": "8.0.1",
		"dompurify": "3.3.1",
		"github-markdown-css": "5.8.1",
		"gray-matter": "4.0.3",
		"html-to-pdfmake": "2.5.32",
		"marked": "17.0.1",
		"next": "16.1.4",
		"pdfmake": "0.3.3",
		"pino": "10.1.0",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"remark": "15.0.1",
		"remark-gfm": "4.0.1",
		"remark-html": "16.0.1"
	},
	"devDependencies": {
		"@capacitor/cli": "8.0.1",
		"@eslint/eslintrc": "3.3.3",
		"@tailwindcss/postcss": "4.1.18",
		"@tauri-apps/cli": "2.9.6",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.2",
		"@types/html-to-pdfmake": "2.4.4",
		"@types/jest": "30.0.0",
		"@types/node": "25.0.10",
		"@types/pdfmake": "0.2.12",
		"@types/react": "19.2.9",
		"@types/react-dom": "19.2.3",
		"daisyui": "5.5.14",
		"eslint": "9.39.2",
		"eslint-config-next": "16.1.4",
		"husky": "9.1.7",
		"jest": "30.2.0",
		"jest-environment-jsdom": "30.2.0",
		"kill-port": "2.0.1",
		"prettier": "3.7.4",
		"prettier-plugin-tailwindcss": "0.7.2",
		"rimraf": "6.1.2",
		"tailwindcss": "4.1.18",
		"ts-jest": "29.4.6",
		"ts-node": "10.9.2",
		"typescript": "5.9.3"
	}
}
